<h1>Login</h1>

<div class="col-sm-4">
  <%= form_for @admin_session do |f| %>
    <% if @admin_session.errors.any? %>
      <div class="panel panel-warning errors">
        <div class="panel-heading">
          <h5><i class="glyphicon glyphicon-exclamation-sign"></i> Found errors while saving</h5>
        </div>

        <ul class="panel-body">
          <% @admin_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :login %>
      <%= f.text_field :login, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <%= f.submit "Login", class: 'btn btn-primary' %>
  <% end %>
</div>
