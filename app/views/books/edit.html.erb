<h1>Editing <%= @book.title %></h1>

<div class="col-sm-4">
  <%= form_for(@book) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :thoughts %>
      <%= form.text_area :thoughts, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>